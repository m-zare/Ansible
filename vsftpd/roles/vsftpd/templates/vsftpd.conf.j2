listen=YES

# Allow anonymous FTP
anonymous_enable=NO
# Allow local usrs to log in
local_enable=YES

# Activate virtual users
guest_enable=YES

# Virtual users will use the same privileges as local users.
virtual_use_local_privs=YES

local_root=/var/vsftpd/sites/$USER
user_sub_token=$USER
local_umask=000
reverse_lookup_enable=NO

# Allow ftp write command
write_enable=YES

# Lock users to their home directories
chroot_local_user=YES

# Hide the info about the owner (user and group) of the files.
hide_ids=YES

connect_from_port_20=YES
secure_chroot_dir=/var/vsftpd
pam_service_name=vsftpd.virtual

# Turn on verbose vsftpd log format
log_ftp_protocol=YES

syslog_enable=YES

vsftpd_log_file=/var/log/vsftpd.log

# Turn off standard ftpd xfer log format
xferlog_enable=yes
xferlog_file=/var/log/xfer.log
user_config_dir=/etc/vsftpd/vsftpd-user-conf

pasv_enable=YES
